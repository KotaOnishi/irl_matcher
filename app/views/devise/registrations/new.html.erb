<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

<!-- 追加した編集ポイント -->
  <div class="field">
    <%= f.label :名前 %> <br />
    <%= f.text_field :name, autofocus: true %>
  </div>

        <p>プロフィール画像</p>
      <div class="form-group file">
        <%= f.file_field :avatar, class: "form-control floating-label", placeholder: "画像アップロード" %>
      </div>

  <div class="field">
    <%= f.label :会社 %> <br />
    <%= f.text_field :company, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :大学 %> <br />
    <%= f.text_field :university, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :高校 %> <br />
    <%= f.text_field :high_school, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :卒業年度 %> <br />
    <%= f.select :grad_year, [["2012年度", "2012"], ["2013年度", "2013"], ["2014年度", "2014"], ["2015年度", "2015"]] %>
  </div>

  <div class="field">
    <%= f.label :担当チューター %> <br />
    <%= f.select :tutor, [["河野", "0"], ["大西", "1"], ["富田", "2"], ["後藤", "3"]] %>
  </div>

  <div class="field">
    <%= f.label :学生or社会人 %> <br />
    <%= f.select :status, [["学生", "0"], ["社会人", "1"]] %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>